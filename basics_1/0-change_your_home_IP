#!/usr/bin/env bash
# Ce script modifie /etc/hosts pour que localhost pointe vers 127.0.0.2 et facebook.com vers 8.8.8.8

# Sauvegarde du fichier original
sudo cp /etc/hosts /etc/hosts.bak

# Supprimer toute ligne existante liant localhost à 127.0.0.1
sudo sed -i '/127\.0\.0\.1\s\+localhost/d' /etc/hosts

# Ajouter la nouvelle liaison pour localhost
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null

# Ajouter la nouvelle IP pour facebook.com
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null

# Confirmation
echo "Changements appliqués :"
echo "localhost => 127.0.0.2"
echo "facebook.com => 8.8.8.8"
